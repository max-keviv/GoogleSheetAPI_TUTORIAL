<%- include("top") -%>

    <div class="container pt-4 overflow-auto">


        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">S.no</th>
                        <th scope="col">Name</th>
                        <th scope="col">Link</th>
                        <th scope="col">Remove</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const i in (items)) { j=1%>
                        <tr>
                            <th scope="row">
                                <%- i %>

                            </th>
                            <td>
                                <%- items[i].name %>
                            </td>
                            <td>
                                <%- items[i].link %>
                            </td>
                            <td>
                            
                            <button class="delete" id="<%-i%>" class="btn">&#x1f5d1;</button>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>

        <form action="/PartA/addnamelink" method="POST" id="formID" class="form-inline">
            <div class="mt-5 pt-5 form-group">
                <div class="form-group mb-2">
                    <label for="inputName" class="sr-only">Name</label>
                    <input required id="inputName" type="text" name="add_name" placeholder="Name" class="form-control">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <label for="inputLink" class="sr-only">Url</label>
                    <input required id="inputLink" type="url" name="add_link" placeholder="Link" class="form-control">
                </div>
                <button class="btn btn-outline-success mb-2" name="addbutton" type="submit">Add
                    Item</button>
            </div>
        </form>
        <div class="col">
        <div class="row">
        <form action="/PartA/save" method="POST" id="saveForm">
            <button class="btn btn-block btn-outline-warning place mr-5" name="save" type="submit">Save</button>
        </form>
    </div>
    <div class="row pt-2" >
        <div>
        <button id="download" class="btn btn-block btn-outline-primary mr-2">Download</button>
    </div></div>
</div>
</div>
    <%- include("end") -%>