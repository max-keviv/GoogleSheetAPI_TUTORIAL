<%- include("top") %>
    <div class="container p-4 ml-2">

        <form>
            <div class="pb-2"><a class="btn btn-outline-danger btn-sm " href="/task1/partA">‚ùÆ PartA</a></div>

            <div class="col form-row form-inline">
                <div class="form-group mx-sm-3 mb-2">
                    <label for="giveName" class="col-sm-2 col-form-label col-form-label-lg">Dear</label>
                    <div class="col-sm-10">
                        <input required type="text" class="form-control" id="giveName" placeholder="Name">
                    </div>
                </div>
                <button type="button" class="btn btn-dark mb-2" id="refresh">Refresh</button>
            </div>
            <div class="col form-group mx-sm-3 mb-2">

                <textarea class="form-control" id="inputText" rows="4"></textarea>
            </div>

            <div class="col mx-3 pt-3">
                <div class="row">
                    <div class="form-group col-sm-3 ">

                        <label for="selectUser">User</label>
                        <select class="form-control bg-warning" id="selectUser">
                            <option selected>choose</option>
                            <% items.forEach(function(user){ %>
                                <option value=<%=user.link %>><%=(user.name); %></option>
                                <% }) %>
                        </select>





                    </div>
                    <div class="form-group col px-4 pt-4 ">
                        <div class="col">
                            <input type="checkbox" class="custom-control-input" id="addThanks">
                            <label class="custom-control-label" for="addThanks">Add Thanks</label>
                        </div>
                        <div class="col">
                            <input type="checkbox" class="custom-control-input" id="addDate">
                            <label class="custom-control-label" for="addDate">Add Date</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col mx-3 pt-3">
                <div class="form-group">
                    <label for="outputText">Output</label>
                    <textarea class="form-control" id="outputText" rows="7"></textarea>
                </div>
            </div>
        </form>



    </div>

    <%- include("end") %>